{
    "name": "Node.js Dev Container",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "features": {
      "ghcr.io/devcontainers/features/node:1": {
        "version": "20"
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode"
        ]
      }
    },
    "postCreateCommand": "npm install",
    "portsAttributes": {
      "3000": {
        "label": "Web Server",
        "onAutoForward": "openBrowser"
      }
    }
  }
  